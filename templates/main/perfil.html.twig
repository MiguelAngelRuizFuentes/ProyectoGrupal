{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}

<link rel="stylesheet" href="/css/perfil.css">

<h1>Perfil</h1>

<hr>

<div id="email">
    <h3>Email: </h3>
    <p>{{app.user.email}}</p>
</div>

<div id="nombre">
    <h3>Nombre: </h3>
